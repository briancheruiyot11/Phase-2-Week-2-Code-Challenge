{
  "name": "smart-goal-planner",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000", 
    "lint": "next lint",
    "server": "json-server --watch db.json --port 3001 --host 0.0.0.0",
    "dev:all": "concurrently -k \"npm run server\" \"npm run dev\"",
    "start:all": "concurrently -k \"npm run server\" \"npm run start\""
  },
  "dependencies": {
    "next": "15.4.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "json-server": "^1.0.0-beta.3",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "eslint": "^9",
    "eslint-config-next": "15.4.2",
    "tailwindcss": "^4"
  }
}